{
  "name": "grow-vatika",
  "private": true,
  "scripts": {
    "build": "npm run db:generate && turbo run build",
    "db:generate": "cd packages/db && npx prisma generate",
    "dev": "npm run db:generate && turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "db:push": "cd packages/db && npx prisma db push",
    "db:migrate": "cd packages/db && npx prisma migrate dev",
    "db:studio": "cd packages/db && npx prisma studio",
    "postinstall": "npm install --platform=linux --arch=x64 sharp"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "tsup": "^8.0.1",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.4",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.0"
  }
}
