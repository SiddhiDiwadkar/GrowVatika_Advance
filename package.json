{
  "name": "grow-vatika",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"*/.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "postinstall": "npm install --platform=linux --arch=x64 sharp"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.1",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.4",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.0"
  }
}
